  <contentType namespace="com.embarcadero.edn">
    <name>OrderDetail</name>
    <defType>CONCRETE_COMPONENT</defType>
    <primaryField>item</primaryField>
    <fields>
      <field>
        <name>quantity</name>
        <displayName>Quantity</displayName>
        <value>
          <double />
        </value>
      </field>
      <field>
        <name>taxStatus</name>
        <displayName>Tax Status</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>item</name>
        <displayName>Item</displayName>
        <value>
          <content>
            <definition>
              <typeNS>com.embarcadero.edn</typeNS>
              <typeName>Item</typeName>
            </definition>
            <availableForSearch>true</availableForSearch>
          </content>
        </value>
      </field>
    </fields>
    <representations>
      <representation>
        <name>getPriceForQuantity</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>ItemPriceForQuantity</name>
          </internal>
        </uri>
      </representation>
      <representation>
        <name>getWeight</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>ItemWeight</name>
          </internal>
        </uri>
      </representation>
      <representation>
        <name>calSubTotal</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>CalcSubTotal</name>
          </internal>
        </uri>
      </representation>
      <representation>
        <name>calcWeight</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>CalcOrderItemWeight</name>
          </internal>
        </uri>
      </representation>
    </representations>
  </contentType>
  <contentType namespace="com.embarcadero.edn">
    <name>Order</name>
    <primaryField>orderId</primaryField>
    <fields>
      <field>
        <name>orderId</name>
        <displayName>Order ID</displayName>
        <value>
          <long />
        </value>
      </field>
      <field>
        <name>date</name>
        <displayName>Order Date</displayName>
        <value>
          <datetime />
        </value>
      </field>
      <field>
        <name>orderStatus</name>
        <displayName>Order Status</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>lineItems</name>
        <displayName>Order Items</displayName>
        <value>
          <collection>
            <simple-value>
              <composition>
                <content>
                  <definition>
                    <typeNS>com.embarcadero.edn</typeNS>
                    <typeName>OrderDetail</typeName>
                  </definition>
                </content>
              </composition>
            </simple-value>
            <minSize>1</minSize>
          </collection>
        </value>
      </field>
      <field>
        <name>payments</name>
        <displayName>Payments</displayName>
        <value>
          <collection>
            <simple-value>
              <content>
                <definition>
                  <typeNS>com.embarcadero.edn</typeNS>
                  <typeName>Payment</typeName>
                </definition>
              </content>
            </simple-value>
            <minSize>1</minSize>
          </collection>
        </value>
      </field>
      <field>
        <name>customer</name>
        <displayName>Customer</displayName>
        <value>
          <content>
            <definition>
              <typeNS>com.embarcadero.edn</typeNS>
              <typeName>Customer</typeName>
            </definition>
          </content>
        </value>
      </field>
    </fields>
    <representations>
      <representation>
        <name>calcTax</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>CalcTax</name>
          </internal>
        </uri>
      </representation>
      <representation>
        <name>calcTotal</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>CalcTotal</name>
          </internal>
        </uri>
      </representation>
      <representation>
        <name>calcTotalWeight</name>
        <mimeType>text/plain</mimeType>
        <uri>
          <internal>
            <name>CalcOrderWeight</name>
          </internal>
        </uri>
      </representation>
    </representations>
  </contentType>
</contentTypes>