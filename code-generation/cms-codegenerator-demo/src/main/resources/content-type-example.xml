  <contentType namespace="com.embarcadero.edn">
    <name>Cash</name>
    <parent>
      <typeNS>com.embarcadero.edn</typeNS>
      <typeName>Payment</typeName>
    </parent>
    <fields>
      <field>
        <name>cashTendered</name>
        <displayName>Cash Tendered</displayName>
        <value>
          <boolean />
        </value>
      </field>
    </fields>
  </contentType>
  <contentType namespace="com.embarcadero.edn">
    <name>Check</name>
    <parent>
      <typeNS>com.embarcadero.edn</typeNS>
      <typeName>Payment</typeName>
    </parent>
    <fields>
      <field>
        <name>name</name>
        <displayName>Name</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>bankID</name>
        <displayName>Bank ID</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>authorized</name>
        <displayName>Authorized</displayName>
        <value>
          <boolean />
        </value>
      </field>
    </fields>
  </contentType>
  <contentType namespace="com.embarcadero.edn">
    <name>Credit</name>
    <parent>
      <typeNS>com.embarcadero.edn</typeNS>
      <typeName>Payment</typeName>
    </parent>
