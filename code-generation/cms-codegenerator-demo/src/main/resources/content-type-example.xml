      <field>
        <name>number</name>
        <displayName>Card Number</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>type</name>
        <displayName>Card Type</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
      </field>
      <field>
        <name>expDate</name>
        <displayName>Expiry Date</displayName>
        <value>
          <datetime />
        </value>
      </field>
      <field>
        <name>authorized</name>
        <displayName>Authorized</displayName>
