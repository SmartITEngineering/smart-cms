<contentTypes  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
               xmlns='http://www.smartitengineering.com/smart-cms/content/content-type-schema'
               xsi:schemaLocation='http://www.smartitengineering.com/smart-cms/content/content-type-schema ../../../../../../api-modules/content-api-impl/src/main/resources/com/smartitengineering/cms/content/content-type-schema.xsd'>
  <contentType namespace="enum">
    <name>EnumTest</name>
    <parameterizedDisplayNames>
      <param>
        <key>en-US</key>
        <val>Address (en-US)</val>
      </param>
    </parameterizedDisplayNames>
    <primaryField>zipCode</primaryField>
    <fields>
      <field>
        <name>zipCode</name>
        <displayName>Postal Code/Zip Code</displayName>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
        <required>true</required>
        <search>
          <index>true</index>
          <store>true</store>
        </search>
      </field>
      <field>
        <name>directEnumField</name>
        <value>
          <enumeration>
            <choice>1</choice>
            <choice>2</choice>
          </enumeration>
        </value>
      </field>
      <field>
        <name>collectiveEnumField</name>
        <value>
          <collection>
            <simple-value>
              <enumeration>
                <choice>3</choice>
                <choice>4</choice>
              </enumeration>
            </simple-value>
          </collection>
        </value>
      </field>
      <field>
        <name>compositedEnumField</name>
        <value>
          <composition>
            <field>
              <name>enumField</name>
              <value>
                <enumeration>
                  <choice>5</choice>
                  <choice>6</choice>
                </enumeration>
              </value>
            </field>
          </composition>
        </value>
      </field>
      <field>
        <name>collectiveCompositedEnumField</name>
        <value>
          <collection>
            <simple-value>
              <composition>
                <field>
                  <name>enumField</name>
                  <value>
                    <enumeration>
                      <choice>7</choice>
                      <choice>8</choice>
                    </enumeration>
                  </value>
                </field>
              </composition>
            </simple-value>
          </collection>
        </value>
      </field>
    </fields>
  </contentType>               
</contentTypes>
