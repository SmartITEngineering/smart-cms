<contentTypes  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
               xmlns='http://www.smartitengineering.com/smart-cms/content/content-type-schema'
               xsi:schemaLocation='http://www.smartitengineering.com/smart-cms/content/content-type-schema ../../../../content-api-impl/src/main/resources/com/smartitengineering/cms/content/content-type-schema.xsd'>
  <contentType namespace="asdfasdf1">
    <name>XYZ</name>
    <parent>
      <typeNS>jpeg</typeNS>
      <typeName>RST</typeName>
    </parent>
    <fields>
      <field>
        <name>fieldA</name>
        <displayName>Field A</displayName>
        <value>
          <content>
            <definition>
              <workspace>
                <workspaceNS>testWS</workspaceNS>
                <workspaceName>test</workspaceName>
              </workspace>
              <typeNS>asdfasdf1</typeNS>
              <typeName>XYZ</typeName>
            </definition>
            <bidirectional>test</bidirectional>
            <availableForSearch>true</availableForSearch>
          </content>
        </value>
        <variations>
          <variation>
            <name>avar</name>
            <mimeType>some/type</mimeType>
            <uri>
              <external>http://some/uri</external>
            </uri>
          </variation>
          <variation>
            <name>anothervar</name>
            <mimeType>some/type</mimeType>
            <uri>
              <internal>
                <name>internalvar</name>
              </internal>
            </uri>
          </variation>
        </variations>
      </field>
      <field>
        <name>fieldB</name>
        <value>
          <collection>
            <simple-value>
              <integer />
            </simple-value>
            <maxSize>10</maxSize>
          </collection>
        </value>
        <required>true</required>
        <validator>
          <validatorType>javascript</validatorType>
          <uri>
            <internal>
              <name>internalvar</name>
            </internal>
          </uri>
        </validator>
      </field>
      <field>
        <name>fieldC</name>
        <value>
          <collection>
            <simple-value>
              <content>
                <definition>
                  <typeNS>jpeg</typeNS>
                  <typeName>RST</typeName>
                </definition>
                <availableForSearch>false</availableForSearch>
              </content>
            </simple-value>
            <minSize>2</minSize>
          </collection>
        </value>
        <validator>
          <validatorType>groovy</validatorType>
          <uri>
            <external>http://some/uri</external>
          </uri>
        </validator>
      </field>
      <field>
        <name>fieldD</name>
        <value>
          <collection>
            <simple-value>
              <content>
                <definition>
                  <typeNS>jpeg</typeNS>
                  <typeName>RST</typeName>
                </definition>
              </content>
            </simple-value>
          </collection>
        </value>
        <required>true</required>
        <validator>
          <validatorType>javascript</validatorType>
          <uri>
            <internal>
              <name>internalvar</name>
            </internal>
          </uri>
        </validator>
      </field>
    </fields>
    <status>
      <statusName>draft</statusName>
      <statusName>marketed</statusName>
      <statusName>obselete</statusName>
    </status>
  </contentType>
  <contentType namespace="jpeg">
    <name>RST</name>
    <displayName>JPEG Image</displayName>
    <fields>
      <field>
        <name>image</name>
        <value>
          <other>
            <mimeType>image/jpeg</mimeType>
          </other>
        </value>
        <search>
          <index>true</index>
          <store>false</store>
          <boost>a</boost>
        </search>
        <update-standalone>true</update-standalone>
      </field>
      <field>
        <name>altText</name>
        <value>
          <string>
            <mimeType>text/plain</mimeType>
          </string>
        </value>
        <update-standalone>true</update-standalone>
      </field>
    </fields>
    <status>
      <statusName>draft</statusName>
      <statusName>marketed</statusName>
      <statusName>obselete</statusName>
    </status>
    <representations>
      <representation>
        <name>arep</name>
        <mimeType>some/type</mimeType>
        <uri>
          <external>http://some/uri</external>
        </uri>
      </representation>
      <representation>
        <name>anotherrep</name>
        <mimeType>some/type</mimeType>
        <uri>
          <internal>
            <name>internalrep</name>
          </internal>
        </uri>
      </representation>
    </representations>
  </contentType>
</contentTypes>
